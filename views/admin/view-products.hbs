<section>
    <div class="container">
        <div class="row mt-4 mb-4">
            <a href="/admin/add-product" class="btn btn-primary ml-auto">Add Products</a>
          
        </div>

        <table id="table" class="table">
            <thead>
                <tr>

                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>                  
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each val}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.category}}</td>                   
                    <td><img style="width:50px;height:50px;" src="/product-images/{{this._id}}.png" alt=""></td>
                    <td><a href="/admin/edit-product/{{this.id}}" class="btn mr-2 btn-success">edit</a> <a href="/admin/deleteproduct/{{this._id}}" class="btn btn-danger" onclick="return confirm('do u want to delete {{this.name}} ?')">Delete</a></td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>

</section>


