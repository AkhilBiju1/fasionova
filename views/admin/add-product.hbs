<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add Product</h2>


                <form method="POST" enctype="multipart/form-data" action="/admin/add-product">


                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control">

                    <label for="type">type</label>
                    <input type="text" name="type" placeholder="eg: topwear,footwear,bottomwear,etc"
                        class="form-control">

                    <label for="">category</label>
                    <input type="text" name="Category" placeholder="eg: Tshirt,shirt,etc"
                        class="form-control">

                    <label for="">Price</label>
                    <input type="number" name="Price" class="form-control">

                    <label for="">Discount Price</label>
                    <input type="text" name="disprice" class="form-control">
                    
                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control">
                    
                    <label for="">Size</label>
                    <input type="text" placeholder="x,xl,m,etc" name="size" class="form-control">
                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control">
                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input id="men" name="gender" value="men" type="radio" class="custom-control-input"
                                checked="" required="">
                            <label class="custom-control-label" for="men">Men</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="women" name="gender" value="women" type="radio" class="custom-control-input"
                                required="">
                            <label class="custom-control-label" for="women">Women</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="boy" name="gender" value="kid" type="radio" class="custom-control-input"
                                required="">
                            <label class="custom-control-label" for="boy">Kids</label>
                        </div>


                    </div>
                    <button type="submit" class="btn btn-success mt-4">submit</button>
                </form>
            </div>
        </div>
    </div>
</section>