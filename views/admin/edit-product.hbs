<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 style="color: #1b4d86;" class="text-center">Edit Product</h2>


                <form method="POST" enctype="multipart/form-data" action="/admin/edit-product/{{product._id}}">

                  
                    <label for="">Name</label>
                    <input type="text" name="Name" value="{{product.name}}" class="form-control">
                    
                    <label for="type">type</label>
                    <input value="{{product.type}}" type="text" name="type" placeholder="eg: topwear,footwear,bottomwear,etc" class="form-control">

                    <label for="">category</label>
                    <input value="{{product.category}}" type="text" name="Category" class="form-control">

                    <label for="">Price</label>
                    <input value="{{product.price}}" type="number" name="Price" class="form-control">
                    <label for="">Discount Price</label>
                    <input type="text" name="disprice" value="{{product.disprice}}" class="form-control">
                    
                    <label for="">Description</label>
                    <input  value="{{product.description}}" type="text" name="Description" class="form-control">

                    <label for="">Size</label>
                    <input type="text" placeholder="x,xl,m,etc" value="{{product.size}}" name="size" class="form-control">

                    <img id="imgview" class="mt-2 mb-2" src="/product-images/{{product._id}}.png" alt="img" style="width: 150px;height: auto;">
                    <label for="">Image</label>
                    <input onchange="viewImage(event)" type="file"  name="Image" class="form-control">

                    <button type="submit" class="btn btn-success mt-4">submit</button>
                </form>
            </div>
        </div>
    </div>
  
</section>
<script>
    function viewImage(event){
        document.getElementById("imgview").src=URL.createObjectURL(event.target.files[0])
    }
</script>