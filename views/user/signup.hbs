<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

<section>
    <div style="height: 60px;"></div>
    <div>
        <img class="wave" src="images/wave.png">
        <div class="container">
            <div class="img">
                <img src="images/bg.svg">
            </div>
            <div class="login-content">
                <form class="login" action="/signup" method="post">
                    <img src="images/avatar.svg">
                    <h2 class="title">Welcome</h2>
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-user"></i>
                        </div>
                    
                        <div class="div">
                            <h5>Full Name</h5>
                            <input type="text" name="name" class="input">
                        </div>
                    </div>
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-user"></i>
                        </div>
                        
                        <div class="div">
                            <h5>Email</h5>
                            <input type="email"  name="email" class="input"
                                aria-describedby="emailHelp">
                        </div>
                    </div>
                    <div class="input-div pass">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">
                            <h5>Password</h5>
                            <input  name="pass" type="password" class="input">   
                        </div>
                        
                        
                           

                    </div>
                    {{#if userExist}}
                    <small id="emailHelp">Email already exist try another email or <a style="color: rgb(5, 66, 152); display: inline;"
                            href="/login">Login</a></small>
                    {{/if}}
                    <input type="submit" class="butn" value="Signin">
                </form>
            </div>
        </div>

    </div>
    <script src="/javascripts/login.js"></script>
</section>